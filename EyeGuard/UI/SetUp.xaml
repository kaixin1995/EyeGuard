<?xml version="1.0" encoding="utf-8" ?>
<hc:Window
    x:Class="EyeGuard.UI.SetUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:EyeGuard.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SetUpWindow"
    Title="设置中心"
    Width="400"
    Height="480"
    Loaded="MetroWindow_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="12">
        <TabControl Style="{StaticResource TabControlInLine}">
            <TabItem Header="⏰ 休息设置">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock
                            Name="DisplayTime"
                            Margin="0,0,0,12"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryBrush}"
                            Text="您已经工作0分" />

                        <hc:Divider Margin="0,0,0,10" Content="时间设置" />

                        <hc:UniformSpacingPanel Orientation="Vertical" Spacing="10">
                            <Border
                                Padding="10"
                                Background="{DynamicResource RegionBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="0,0,0,4"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Text="工作时间" />
                                    <Slider
                                        Name="work"
                                        Grid.Row="1"
                                        IsSnapToTickEnabled="True"
                                        LostFocus="TimerMode_LostFocus"
                                        Maximum="60"
                                        Minimum="1"
                                        TickFrequency="1"
                                        ValueChanged="TimerMode_ValueChanged" />
                                </Grid>
                            </Border>

                            <Border
                                Padding="10"
                                Background="{DynamicResource RegionBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="0,0,0,4"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Text="休息时间" />
                                    <Slider
                                        Name="rest"
                                        Grid.Row="1"
                                        IsSnapToTickEnabled="True"
                                        LostFocus="TimerMode_LostFocus"
                                        Maximum="15"
                                        Minimum="1"
                                        TickFrequency="1"
                                        ValueChanged="LockMode_ValueChanged" />
                                </Grid>
                            </Border>
                        </hc:UniformSpacingPanel>

                        <hc:Divider Margin="0,12,0,10" Content="模式设置" />

                        <hc:UniformSpacingPanel Orientation="Vertical" Spacing="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="计时模式" />
                                <ComboBox
                                    Name="Time"
                                    Grid.Column="1"
                                    Width="160"
                                    IsEditable="True"
                                    IsReadOnly="True" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="锁屏风格" />
                                <ComboBox
                                    Name="Lock"
                                    Grid.Column="1"
                                    Width="160" />
                            </Grid>
                        </hc:UniformSpacingPanel>

                        <hc:Divider Margin="0,12,0,10" Content="功能开关" />

                        <hc:UniformSpacingPanel Orientation="Vertical" Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Text="播放语音提示" />
                                    <TextBlock
                                        Margin="0,1,0,0"
                                        FontSize="10"
                                        Foreground="Gray"
                                        Text="休息和关机前播放语音提醒" />
                                </StackPanel>
                                <ToggleButton
                                    Name="VoiceNotice"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    IsChecked="True"
                                    Style="{StaticResource ToggleButtonSwitch}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Text="允许解锁" />
                                    <TextBlock
                                        Margin="0,1,0,0"
                                        FontSize="10"
                                        Foreground="Gray"
                                        Text="休息时可手动解锁" />
                                </StackPanel>
                                <ToggleButton
                                    Name="Unlock"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ToggleButtonSwitch}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Text="智能计时" />
                                    <TextBlock
                                        Margin="0,1,0,0"
                                        FontSize="10"
                                        Foreground="Gray"
                                        Text="检测鼠标键盘活动，无操作5分钟重置" />
                                </StackPanel>
                                <ToggleButton
                                    Name="IsIntelligent"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ToggleButtonSwitch}" />
                            </Grid>
                        </hc:UniformSpacingPanel>

                        <Button
                            Name="Preservation"
                            Height="36"
                            Margin="0,14,0,0"
                            HorizontalAlignment="Stretch"
                            Click="Preservation_Click"
                            Content="保存设置"
                            FontSize="14"
                            Style="{StaticResource ButtonPrimary}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="🔌 关机设置">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <Border
                            Margin="0,0,0,12"
                            Padding="10"
                            Background="#FFF4E5"
                            BorderBrush="#FFB74D"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,6,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="⚠️" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="设置为 -1 表示不启用自动关机" />
                            </StackPanel>
                        </Border>

                        <hc:Divider Margin="0,0,0,10" Content="定时设置" />

                        <hc:UniformSpacingPanel Orientation="Vertical" Spacing="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="小时" />
                                <ComboBox
                                    Name="ShutdownTime"
                                    Grid.Column="1"
                                    IsEditable="True"
                                    IsReadOnly="True" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="分钟" />
                                <ComboBox Name="ShutdownPoints" Grid.Column="1" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="模式" />
                                <ComboBox
                                    Name="ShutdownMode"
                                    Grid.Column="1"
                                    IsEditable="True"
                                    IsReadOnly="True" />
                            </Grid>
                        </hc:UniformSpacingPanel>

                        <Button
                            Name="btn_ShutDownToSave"
                            Height="36"
                            Margin="0,14,0,0"
                            HorizontalAlignment="Stretch"
                            Click="Preservation_Click"
                            Content="保存设置"
                            FontSize="14"
                            Style="{StaticResource ButtonPrimary}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</hc:Window>
