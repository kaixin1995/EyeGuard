<hc:Window
    x:Class="EyeGuard.UI.SetUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:EyeGuard.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SetUp"
    Width="245"
    Height="364"
    Loaded="MetroWindow_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <TabControl Style="{StaticResource TabControlInLine}">
            <TabItem Header="休息设置">
                <Grid Name="RestPanel" Height="330">
                    <Label
                        Margin="7,37,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="工作时间:" />
                    <Label
                        Margin="7,77,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="休息时间:"
                        RenderTransformOrigin="0.586,2.96" />
                    <Label
                        Margin="7,116,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="计时模式:"
                        RenderTransformOrigin="0.586,2.96" />
                    <Label
                        Margin="7,160,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="锁屏风格:"
                        RenderTransformOrigin="0.586,2.96" />

                    <!--  工作时间  -->
                    <Slider
                        Name="work"
                        Width="143"
                        Height="22"
                        Margin="85,42,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsSnapToTickEnabled="True"
                        LostFocus="TimerMode_LostFocus"
                        Maximum="60"
                        Minimum="1"
                        ValueChanged="TimerMode_ValueChanged" />
                    <!--  休息时间  -->
                    <Slider
                        Name="rest"
                        Width="134"
                        Height="25"
                        Margin="85,79,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsSnapToTickEnabled="True"
                        LostFocus="TimerMode_LostFocus"
                        Maximum="15"
                        Minimum="1"
                        ValueChanged="LockMode_ValueChanged" />

                    <ComboBox
                        Name="Time"
                        Width="134"
                        Margin="85,116,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsEditable="True"
                        IsReadOnly="True" />
                    <ComboBox
                        Name="Lock"
                        Width="134"
                        Margin="85,158,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
                    <Button
                        Name="Preservation"
                        Width="60"
                        Height="66"
                        Margin="159,211,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="Preservation_Click"
                        Content="保存"
                        Style="{StaticResource ButtonPrimary}" />
                    <TextBlock
                        Name="DisplayTime"
                        Margin="69,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="15"
                        RenderTransformOrigin="0.586,2.96"
                        Text="您已经工作0分" />

                    <Label
                        Margin="7,231,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="是否允许解锁" />

                    <ToggleButton
                        Name="Unlock"
                        Height="Auto"
                        Margin="110,235,0,73"
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="0.492,-0.67"
                        Style="{StaticResource ToggleButtonSwitch}" />

                    <Label
                        Margin="7,265,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="是否智能计时" />
                    <ToggleButton
                        Name="IsIntelligent"
                        Height="Auto"
                        Margin="110,269,0,39"
                        HorizontalAlignment="Left"
                        Style="{StaticResource ToggleButtonSwitch}" />

                    <Label
                        Margin="7,196,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="播放语音提示" />
                    <ToggleButton
                        x:Name="VoiceNotice"
                        Height="Auto"
                        Margin="110,199,0,109"
                        HorizontalAlignment="Left"
                        IsChecked="True"
                        RenderTransformOrigin="0.492,-0.67"
                        Style="{StaticResource ToggleButtonSwitch}" />
                </Grid>
            </TabItem>
            <TabItem Header="关机设置">
                <Grid Name="ShutdownPanel">
                    <Label
                        Margin="6,41,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="小时:" />
                    <Label
                        Margin="6,78,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="分钟:"
                        RenderTransformOrigin="0.586,2.96" />

                    <ComboBox
                        Name="ShutdownTime"
                        Width="168"
                        Margin="61,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsEditable="True"
                        IsReadOnly="True"
                        RenderTransformOrigin="0.497,-0.769" />
                    <ComboBox
                        Name="ShutdownPoints"
                        Width="168"
                        Margin="61,78,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
                    <Button
                        Name="btn_ShutDownToSave"
                        Width="218"
                        Height="130"
                        Margin="11,160,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="Preservation_Click"
                        Content="保存"
                        FontSize="50" />
                    <TextBlock
                        Margin="22,12,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="15"
                        Foreground="Red"
                        RenderTransformOrigin="0.586,2.96"
                        Text="提示：-1代表不启用自动关机" />
                    <Label
                        Margin="7,117,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="模式:"
                        RenderTransformOrigin="0.586,2.96" />
                    <ComboBox
                        x:Name="ShutdownMode"
                        Width="168"
                        Margin="61,116,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsEditable="True"
                        IsReadOnly="True" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</hc:Window>
