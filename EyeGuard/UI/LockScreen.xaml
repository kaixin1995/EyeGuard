<Window
    x:Class="EyeGuard.UI.LockScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:EyeGuard.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LockScreen"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="FlipNumberStyle1" TargetType="{x:Type hc:FlipNumber}">
            <Setter Property="FontSize" Value="70" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#535559" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="180" />
            <Setter Property="Camera">
                <Setter.Value>
                    <PerspectiveCamera LookDirection="0 0 -1" Position="0 0 120" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FlipClockStyle1" TargetType="{x:Type hc:FlipClock}">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type hc:FlipClock}">
                        <StackPanel Orientation="Horizontal">
                            <hc:FlipNumber
                                Margin="-20"
                                Number="{Binding NumberList[0], RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{DynamicResource FlipNumberStyle1}" />
                            <hc:FlipNumber
                                Margin="-20"
                                Number="{Binding NumberList[1], RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{DynamicResource FlipNumberStyle1}" />
                            <hc:FlipNumber
                                Margin="0,-20,-20,-20"
                                Number="{Binding NumberList[2], RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{DynamicResource FlipNumberStyle1}" />
                            <hc:FlipNumber
                                Margin="-20"
                                Number="{Binding NumberList[3], RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{DynamicResource FlipNumberStyle1}" />
                            <hc:FlipNumber
                                Margin="0,-20,-20,-20"
                                Number="{Binding NumberList[4], RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{DynamicResource FlipNumberStyle1}" />
                            <hc:FlipNumber
                                Margin="-20"
                                Number="{Binding NumberList[5], RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{DynamicResource FlipNumberStyle1}" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border
            Name="hyaline"
            Margin="2,2,2,2"
            BorderBrush="White"
            BorderThickness="1"
            CornerRadius="0"
            Opacity="0.5">
            <Border
                Name="hyaline2"
                Margin="0"
                Background="Black"
                CornerRadius="0"
                Opacity="0.5" />
        </Border>
        <hc:FlipClock
            Name="filpclock"
            Margin="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{DynamicResource FlipClockStyle1}"
            Visibility="Collapsed" />
        <Image Name="img" />
        <Image
            Name="Unlock"
            Width="32"
            Height="32"
            Margin="498,268,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            MouseLeftButtonDown="Image_MouseLeftButtonDown" />
        <TextBlock
            Name="PromptText"
            Width="Auto"
            Height="61"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontFamily="Microsoft YaHei UI Light"
            FontSize="40"
            Text="距离解锁时间还有0秒"
            TextWrapping="NoWrap">
            <TextBlock.Foreground>
                <SolidColorBrush Color="White" />
            </TextBlock.Foreground>
            <TextBlock.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="0"
                    Opacity="1"
                    Color="#7F7F7F" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
