<?xml version="1.0" encoding="utf-8" ?>
<hc:Window
    x:Class="EyeGuard.UI.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:EyeGuard.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AboutWindow"
    Title="关于"
    Width="380"
    Height="320"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题区域  -->
        <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryBrush}"
                Text="👁️ EyeGuard" />
            <TextBlock
                Name="Edition"
                Margin="0,4,0,0"
                HorizontalAlignment="Center"
                FontSize="12"
                Foreground="Gray"
                Text="当前版本：3.2.6" />
        </StackPanel>

        <!--  内容区域  -->
        <ScrollViewer Grid.Row="1" Margin="0,0,0,20" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <hc:Divider Margin="0,0,0,12" Content="软件介绍" />

                <Border
                    Padding="12"
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <TextBlock
                        FontSize="12"
                        LineHeight="20"
                        TextWrapping="Wrap">
                        一个可以定时休息、定时关机的小软件，可以起到预防痔疮、近视、颈椎病的作用。<LineBreak /><LineBreak />
                        <Run FontWeight="Bold" Text="✨ 核心功能" />
                        <LineBreak />
                        • 定时休息提醒<LineBreak />
                        • 定时关机设置<LineBreak />
                        • 多种计时模式<LineBreak />
                        • 多种锁屏风格<LineBreak />
                        • 智能计时检测</TextBlock>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!--  底部按钮  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="140"
                Height="36"
                Margin="0,0,10,0"
                Content="🔗 访问 GitHub"
                MouseDown="Github_MouseDown"
                Style="{StaticResource ButtonPrimary}" />
        </StackPanel>
    </Grid>
</hc:Window>
